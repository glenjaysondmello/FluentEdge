generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SpeakingTest {
  id            String   @id @default(cuid())
  uid           String
  referenceText String
  transcript    String
  scores        Json
  mistakes      Json
  suggestions   Json
  encouragement String
  createdAt     DateTime @default(now())
}

model TypingTest {
  id            String   @id @default(cuid())
  uid           String
  referenceText String
  userText      String
  wpm           Float
  cpm           Float
  accuracy      Float
  durationSec   Int
  mistakes      Json
  score         Float
  suggestions   Json
  encouragement String
  createdAt     DateTime @default(now())
}
